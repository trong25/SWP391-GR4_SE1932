<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>utils.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/teacher/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/director/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/academicstaff/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
        <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/accountant/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>DashboardAcademicStaffServlet</servlet-name>
        <servlet-class>Controller.academicstaff.DashboardAcademicStaffServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>Controller.academicstaff.StudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllerr.LoginServlet</servlet-class>
    </servlet>

        <servlet>
        <servlet-name>DashboardTeacherServlet</servlet-name>
        <servlet-class>Controller.teacher.DashboardTeacherServlet</servlet-class>
        </servlet>
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>controllerr.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidatePassword</servlet-name>
        <servlet-class>controllerr.ValidatePassword</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardAcademicStaffServlet</servlet-name>
        <url-pattern>/academicstaff/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/academicstaff/student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardTeacherServlet</servlet-name>
        <url-pattern>/teacher/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    

    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgotPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidatePassword</servlet-name>
        <url-pattern>/ValidatePassword</url-pattern>
    </servlet-mapping>

</web-app>
